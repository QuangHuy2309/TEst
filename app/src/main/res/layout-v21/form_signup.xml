<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/p"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_signup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="#73CFFE"
            android:fontFamily="@font/yellowtail"
            android:gravity="center"
            android:text="@string/signup"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FEFEFF"
            android:textSize="50sp"
            android:typeface="normal"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/email"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/label_textview_signup"
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/txt_signup_email"
            android:layout_width="338dp"
            android:layout_height="52dp"
            android:layout_marginLeft="36dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/label_textview_signup"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/txt_signup_password"
            android:layout_width="338dp"
            android:layout_height="52dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible"
            android:layout_marginLeft="36dp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/label_textview_signup"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/txt_signup_hoten"
            android:layout_width="338dp"
            android:layout_height="52dp"
            android:layout_marginLeft="36dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/txt_signup_password"
            tools:layout_editor_absoluteX="36dp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/gender"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/label_textview_signup"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="236dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:layout_gravity="center"

            tools:layout_editor_absoluteX="101dp">
            <RadioButton
                android:id="@+id/radioBtn_Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="80dp"
                android:text="@string/gender_male"
                android:buttonTint="@color/label_textview_signup"
                android:textColor="@color/label_textview_signup"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radioBtn_Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender_female"
                android:buttonTint="#E1E8497F"
                android:textColor="#E1E8497F"
                android:textSize="18dp" />
        </RadioGroup>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/phonenumber"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/label_textview_signup"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/txt_signup_phonenumber"
            android:layout_width="338dp"
            android:layout_height="52dp"
            android:layout_marginLeft="36dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_signup_dob" />
        <!--
       <TextView
           android:id="@+id/textView6"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="36dp"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="20dp"
           android:text="@string/dob"
           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
           android:textColor="@color/white"

           android:textSize="18dp"
           android:textStyle="bold"/>
       <EditText
           android:id="@+id/txt_signup_dob"
           android:layout_width="338dp"
           android:layout_height="52dp"
           android:layout_marginLeft="36dp"
           android:ems="10"
           android:inputType="textPersonName"
           android:textColor="@color/white"
           android:textSize="24sp" />
        -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/address"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/label_textview_signup"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/txt_signup_address"
            android:layout_width="338dp"
            android:layout_height="52dp"
            android:layout_marginLeft="36dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible" />
        <Button
            android:id="@+id/btn_signup_confirm"
            android:layout_width="347dp"
            android:layout_height="61dp"
            android:layout_marginTop="48dp"
            android:layout_gravity="center"
            android:text="@string/confirm"
            android:textColor="#F3F5F8"
            android:textSize="24sp"
            app:backgroundTint="#69D3E8"
            app:iconTint="#C11717" />
    </LinearLayout>
   </ScrollView>